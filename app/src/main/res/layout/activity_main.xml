<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#e2f0ff"
    android:id="@+id/my_layout"
    android:touchscreenBlocksFocus="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:textColor="#010100"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/media_streamer"
        android:layout_below="@+id/textView"
        android:layout_marginTop="41dp"
        android:background="#F08C35"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#ffffff"
        android:elegantTextHeight="false"
        style="@style/Base.Widget.AppCompat.Button"
        android:clickable="true"
        android:onClick="respondToButtonClick"
        android:contentDescription="my spotify streamer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores app"
        android:id="@+id/my_scores_app"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/media_streamer"
        android:layout_alignLeft="@+id/media_streamer"
        android:layout_alignStart="@+id/media_streamer"
        android:layout_alignRight="@+id/media_streamer"
        android:layout_alignEnd="@+id/media_streamer"
        android:textColor="#ffffff"
        android:onClick="respondToButtonClick"
        android:contentDescription="my scores app" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library app"
        android:id="@+id/lib_app"
        android:background="#F08C35"
        android:layout_below="@+id/my_scores_app"
        android:layout_alignLeft="@+id/my_scores_app"
        android:layout_alignStart="@+id/my_scores_app"
        android:layout_alignRight="@+id/my_scores_app"
        android:layout_alignEnd="@+id/my_scores_app"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:onClick="respondToButtonClick"
        android:contentDescription="my library app" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUIld it bigger"
        android:id="@+id/bb_app"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:layout_below="@+id/lib_app"
        android:layout_alignLeft="@+id/lib_app"
        android:layout_alignStart="@+id/lib_app"
        android:layout_alignRight="@+id/lib_app"
        android:layout_alignEnd="@+id/lib_app"
        android:textColor="#ffffff"
        android:onClick="respondToButtonClick"
        android:contentDescription="my build it bigger app" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAcon reader"
        android:id="@+id/becon_reader_app"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:layout_below="@+id/bb_app"
        android:layout_alignLeft="@+id/bb_app"
        android:layout_alignStart="@+id/bb_app"
        android:layout_alignRight="@+id/bb_app"
        android:layout_alignEnd="@+id/bb_app"
        android:textColor="#ffffff"
        android:onClick="respondToButtonClick"
        android:contentDescription="my own reader app" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: My own app"
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:background="#f0063c"
        android:layout_below="@+id/becon_reader_app"
        android:layout_alignLeft="@+id/becon_reader_app"
        android:layout_alignStart="@+id/becon_reader_app"
        android:layout_alignRight="@+id/becon_reader_app"
        android:layout_alignEnd="@+id/becon_reader_app"
        android:textColor="#ffffff"
        android:onClick="respondToButtonClick"
        android:contentDescription="my own capstone app" />

</RelativeLayout>
